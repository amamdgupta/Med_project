<html lang="en">
    <%- include('./partials/head.ejs') %>

<body>
    <%- include('./partials/nav.ejs') %>
    <div class="details content">
        <h2><%= med.title %></h2>
        <div class="content">
            <p><%= med.info %></p>
        </div>
        <a class="delete" data-doc="<%= med.id %>">delete</a>
    </div>
    <%- include('./partials/footer.ejs') %>
    <script>
        const trash =document.querySelector('a.delete');
        trash.addEventListener('click',(e)=>{
            const endpoint=`/med/${trash.dataset.doc}`;
            console.log('i am here')
            //This is an ajax request by java script
            fetch(endpoint,{
                method : 'DELETE'
            })
            .then((response)=>response.json())
            .then((data)=>{
                window.location.href=data.redirect
            })
            .catch((err)=>{
                console.log(err);
            })
        })
    </script>
</body>
</html>